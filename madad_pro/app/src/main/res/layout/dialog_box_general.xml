<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Information"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:minLines="5"
        android:padding="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:hint="Description"
        android:nextFocusDown="@id/cash_editText"
        android:textSize="20sp"
        android:layout_below="@id/information"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/text_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:text="Help Money"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/cash_editText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:maxLines="1"
        android:nextFocusDown="@id/person_editText"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_cash"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:maxLines="1"
        android:text="Persons Required"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/person_editText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cash_editText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_person"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:onClick="negative"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#2E7D32"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_editText"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="8dp"
        android:onClick="positive"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="#2E7D32"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"/>




</RelativeLayout>